<%= form_for(@player) do |f| %>
    <% if @player.errors.any? %>
        <ul>
          <% @player.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
    <p>
      <%= f.label :Nachname %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :Vorname %>
      <%= f.text_field :forename %>
    </p>
    <p>
      <%= f.label :Kommentar %>
      <%= f.text_field :comment %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
